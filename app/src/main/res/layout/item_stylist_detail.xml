<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardStylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/beige"
    app:cardBackgroundColor="@color/card_background_luxury">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp"
        android:gravity="center_vertical">

        <!-- Avatar Placeholder -->
        <ImageView
            android:id="@+id/imgStylist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:scaleType="centerCrop"
            android:background="@drawable/luxury_badge_background"
            android:padding="4dp"
            android:layout_marginEnd="16dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStylistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Stylist"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                tools:text="Nguyễn Văn A" />

            <TextView
                android:id="@+id/tvSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Chuyên môn"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Chuyên cắt tóc nam" />

        </LinearLayout>

        <!-- Gold Indicator -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/gold_dot" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

