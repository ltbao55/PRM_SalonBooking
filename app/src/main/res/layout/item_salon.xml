<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/beige"
    app:cardBackgroundColor="@color/card_background_luxury">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Salon Image with Elegant Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:id="@+id/imgSalon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Salon image"
                tools:ignore="ContentDescription" />

            <!-- Warm Overlay Gradient (Ánh sáng ấm từ đèn chùm) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_luxury_salon_card"
                android:alpha="0.2" />

            <!-- Luxury Premium Badge (Brass Gold Style) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="18dp"
                android:background="@drawable/luxury_badge_background"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREMIUM"
                    android:textColor="@color/gold"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.12" />

            </LinearLayout>

        </FrameLayout>

        <!-- Salon Info Section - Cream Beige Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background_cream"
            android:padding="22dp">

            <!-- Salon Name with Gold Accent -->
            <TextView
                android:id="@+id/tvSalonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Salon"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                tools:text="Salon Luxury Premium" />

            <!-- Address with Gold Brass Accent Line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Gold Accent Line -->
                <View
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:background="@color/gold"
                    android:layout_marginEnd="12dp"
                    android:elevation="1dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ salon"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    tools:text="123 Nguyễn Huệ, Quận 1, TP.HCM" />

            </LinearLayout>

            <!-- Elegant Divider with Warm Gold Tint -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="14dp"
                android:background="@color/beige" />

            <!-- Service Count & Premium Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvServiceCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dịch vụ cao cấp"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/star_on"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/gold" />

                <!-- Premium Indicator - Gold Dots (Brass Style) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●●●"
                        android:textColor="@color/gold"
                        android:textSize="12sp"
                        android:letterSpacing="0.15" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
