<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev Tools"
            android:textColor="@color/soft_brown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Staff (staff1@lux.com / 123456)"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Admin (admin1@lux.com / 123456)"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForceSeedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Force Seed All Data (5 Salons, 15 Stylists, 35 Services)"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/gold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Staff Accounts from Stylists"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoadStylists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Stylists"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLinkAllStaffAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên kết tất cả Staff với Stylists"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/gold"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStylists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No stylists found"
                android:textColor="@color/text_hint"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
