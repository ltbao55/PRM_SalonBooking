<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/card_background_luxury">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên salon:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên salon"
            android:inputType="text"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ salon"
            android:inputType="textPostalAddress"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL hình ảnh:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL hình ảnh"
            android:inputType="textUri"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả salon"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá (0-5):"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/gold"
        app:hintTextColor="@color/gold">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalonRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đánh giá (0-5)"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/text_primary" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

