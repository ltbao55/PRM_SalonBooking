<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/card_background_luxury">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết lịch hẹn"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Salon Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salon:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDetailSalonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Service -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dịch vụ:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDetailServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Customer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách hàng:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDetailCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Date & Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvDetailDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái:"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipDetailStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chờ xác nhận"
        android:textColor="@color/white"
        app:chipBackgroundColor="@color/warning"
        app:chipMinHeight="32dp"
        android:layout_marginBottom="20dp" />

    <!-- Action Buttons (for staff) -->
    <LinearLayout
        android:id="@+id/llActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bắt đầu"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/success" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hoàn thành"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/info" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_marginStart="8dp"
            app:backgroundTint="@color/error" />

    </LinearLayout>

    <!-- Gold Accent Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"
        android:layout_marginTop="8dp" />

</LinearLayout>

